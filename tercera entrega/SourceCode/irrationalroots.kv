<MethodContainer>
    orientation: "vertical"
    padding: ["32dp","0dp"]
    Label:
        size_hint: None, 0.1
        markup: True
        font_name: "fonts/JetBrainsMono-Bold.ttf"
        font_size: "20sp"
        text_size: self.width, None
        halign: 'left'
