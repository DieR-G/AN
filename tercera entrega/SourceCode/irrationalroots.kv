                    halign: 'center'
                    text: "[color=#92B4EC][b]x1[/b][/color]"
                    BoxLayout:
            BoxLayout:
                orientation: "vertical"
                spacing: "16dp"
                padding: ("32dp","0dp")
                BoxLayout:
                    orientation: "horizontal"
